{
  "productName": "Korino",
  "version": "0.1.0",
  "identifier": "dev.artrix.korino",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev:vite",
    "beforeBuildCommand": "pnpm build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "Korino",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "korino.artrix.dev", "pathPrefix": ["/login"] },
        { "host": "korino.tv" }
      ],
      "desktop": {
        "schemes": ["korino"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "shortDescription": "High quality anime torrenting and streaming",
    "longDescription": "High quality anime torrenting and streaming",
    "homepage": "https://korino.artrix.dev",

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json"
}
